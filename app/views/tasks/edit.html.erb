<h1>Edit a task</h1>
<%= form_with model: @task do |f| %>
  <%= f.label :title , class:"form-label"  %>
  <%= f.text_field :title , class:"form-control border-success "  %>
  <%= f.label  :details , class:"form-label"  %>
  <%= f.text_field :details, class:"form-control border-success"%>
  <%= f.check_box :completed, class:"form-check-input" %>
  <%= f.label  :completed, class:"form-check-label"  %>
  <%= f.submit class:"btn btn-primary d-flex" %>
<% end %>
